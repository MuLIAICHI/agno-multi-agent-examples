# ============================================================================
# TechBlog AI Writer Team - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your actual keys
# ============================================================================


# ============================================================================
# Required: OpenAI API Key
# ============================================================================
# Get your key from: https://platform.openai.com/api-keys
# This is required for the agents to function

OPENAI_API_KEY=sk-your-openai-api-key-here


# ============================================================================
# Optional: GitHub Personal Access Token
# ============================================================================
# Get your token from: https://github.com/settings/tokens
# Without token: 60 requests/hour
# With token: 5,000 requests/hour
# Recommended for production use

GITHUB_TOKEN=ghp_your-github-personal-access-token-here


# ============================================================================
# Optional: Alternative Model Providers
# ============================================================================
# Uncomment and fill in if you want to use these models:

# Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google Gemini
# GOOGLE_API_KEY=your-google-api-key-here

# Groq
# GROQ_API_KEY=gsk_your-groq-key-here

# AWS Bedrock (uses AWS credentials)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1


# ============================================================================
# Application Settings
# ============================================================================

# Enable debug mode (shows more verbose output)
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Maximum retries for API calls
MAX_RETRIES=3

# Timeout for API calls (in seconds)
API_TIMEOUT=30


# ============================================================================
# Team Configuration
# ============================================================================

# Default model to use for agents
DEFAULT_MODEL=gpt-4o

# Enable streaming by default
ENABLE_STREAMING=true

# Number of history runs to keep in memory
HISTORY_RUNS=3

# Show tool calls in output
SHOW_TOOL_CALLS=true


# ============================================================================
# Output Settings
# ============================================================================

# Directory for saving generated blog posts
OUTPUT_DIR=./outputs

# Default output format: markdown, html, json
OUTPUT_FORMAT=markdown

# Automatically save generated posts
AUTO_SAVE=true


# ============================================================================
# Performance Settings
# ============================================================================

# Maximum concurrent API calls
MAX_CONCURRENT_CALLS=3

# Cache API responses (saves costs during testing)
ENABLE_CACHE=false

# Cache directory
CACHE_DIR=./.cache


# ============================================================================
# Development Settings
# ============================================================================

# Enable test mode (uses cheaper models)
TEST_MODE=false

# Test model (cheaper for development)
TEST_MODEL=gpt-4o-mini

# Dry run mode (doesn't make actual API calls)
DRY_RUN=false


# ============================================================================
# Notes
# ============================================================================
#
# 1. Create your .env file:
#    cp .env.example .env
#
# 2. Add your API keys (at minimum, OPENAI_API_KEY)
#
# 3. The .env file is gitignored - it will NOT be committed
#
# 4. In Python, load these with:
#    from dotenv import load_dotenv
#    load_dotenv()
#
# 5. Or export them in your shell:
#    export OPENAI_API_KEY="sk-..."
#
# ============================================================================